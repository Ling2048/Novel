<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="anim_menu_bottombar">
    <item name="android:windowEnterAnimation">@anim/menu_bottombar_in</item>
    <item name="android:windowExitAnimation">@anim/menu_bottombar_out</item>
  </style>

  <style name="MyTheme" parent="MyTheme.Base">

  </style>

  <!-- Base theme applied no matter what API -->
  <style name="MyTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <item name="android:windowTranslucentStatus">true</item>
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">#2d2d30</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">#2d2d30</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">#007acc</item>

    <item name="colorControlHighlight">#3e3e42</item>
    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
  </style>
  <!--坑-->
  <style name="MyTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>
    <item name="android:colorPrimary">#5A8622</item>
    <item name="android:colorAccent">#C7A935</item>
  </style>
  <style name="MyTheme1" parent="@android:style/Theme.Material.Light.DarkActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>
    <item name="android:colorPrimary">#5A8622</item>
    <item name="android:colorAccent">#C7A935</item>
  </style>
  <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
    <item name="color">@android:color/white</item>
  </style>

  <style name="AppBaseTheme" parent="android:Theme.Light"></style>

  <style name="AppTheme" parent="AppBaseTheme"></style>

